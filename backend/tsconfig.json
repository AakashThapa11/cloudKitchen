{
  "compilerOptions": {
    "target": "ES2020",                                 
    "module": "NodeNext",
    "moduleResolution": "NodeNext",                                                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true,                               
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true
}
}